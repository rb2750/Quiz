@page "{handler?}"
@using Microsoft.AspNetCore.Html
@model EditModel
@{
    ViewData["Title"] = "Edit " + Model.quiz?.Name ?? "Quiz"; //Default to quiz if there wasn't a quiz found for this ID
}

@{
    /**
     * Render a card with buttons for the specified type.
     *
     * Types: Question, Answer (case sensitive)
     */
    Func<string, IHtmlContent> RenderCard =
        @<div class='list-group-item text-left p-3 d-flex justify-content-between'>
            <input class='form-control' value='@(item)'/>
            <div class='my-auto d-flex flex-row'>
                <a id='move@(item)Up' href='#' class='text-primary mr-2'>
                    <i class='fas fa-chevron-up fa-fw'></i>
                </a>
                <a id='move@(item)Down' href='#' class='text-primary mr-2'>
                    <i class='fas fa-chevron-down fa-fw'></i>
                </a>
                <a id='add@(item)' href='#' class='text-success mr-2'>
                    <i class='fas fa-plus fa-fw'></i>
                </a>
                <a id='remove@(item)' href='#' class='text-danger'>
                    <i class='fas fa-trash-alt fa-fw'></i>
                </a>
            </div>
        </div>;
}

@if (Model.quiz == null)
{
    <h1 class="display-4 text-center">Quiz not found</h1>
}
else
{
    <h1 class="display-4 text-center">Edit Quiz "@Model.quiz.Name"</h1>

    <div id="question-list" class="text-left">
        <div class="text-right w-100 mb-3">
            <a id="saveQuiz" href="#" class="btn btn-success">Save</a>
            <a href="/" class="btn btn-danger">Cancel</a>
        </div>
        <div class="list-group">
            @RenderCard("Question")
            <div id="answer-container">
                @RenderCard("Answer")
            </div>
        </div>
    </div>
}

@Html.AntiForgeryToken()

@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', () => new Quiz.EditQuiz());
    </script>
}